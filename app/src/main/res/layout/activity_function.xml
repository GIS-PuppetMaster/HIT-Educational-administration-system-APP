<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zkx74.MainActivity"
    android:background="#434343">

    <View
        android:id="@+id/bus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_directions_bus_red_700_48dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:id="@+id/text_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus"
        android:text="校车查询"
        android:textSize="20sp"
        android:layout_marginLeft="60dp"
        android:textColor="#FFFFFF"
        />
    <View
        android:id="@+id/check_score"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_assignment_teal_500_48dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/bus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_score"
        android:layout_toRightOf="@+id/text_bus"
        android:text="成绩查询"
        android:textSize="20sp"
        android:layout_marginLeft="70dp"
        android:textColor="#FFFFFF"
        />
    <View
        android:id="@+id/check_schedule"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_list_light_blue_600_48dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/bus"
        />
    <TextView
        android:id="@+id/text_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_schedule"
        android:text="课程表"
        android:textSize="20sp"
        android:layout_marginLeft="70dp"
        android:textColor="#FFFFFF"
        />
    <View
        android:id="@+id/map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_map_black_48dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/check_score"
        android:layout_toRightOf="@+id/check_schedule"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/map"
        android:layout_toRightOf="@+id/text_list"
        android:text="地图"
        android:textSize="20sp"
        android:layout_marginLeft="100dp"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>